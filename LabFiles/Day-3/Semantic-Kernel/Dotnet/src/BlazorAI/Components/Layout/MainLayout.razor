@inherits LayoutComponentBase
@inject NavigationManager Navigation

<!-- MainLayout.razor -->
<FluentLayout>
    <FluentHeader>
        Welcome to the AI Workshop for Developers
        <FluentSpacer />
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="300">
            <FluentNavLink Href="/" OnClick="NavigateToChat" Icon="@(new Icons.Regular.Size20.Bot())">Chat</FluentNavLink>
            <FluentNavLink Href="/multiagent" OnClick="NavigateToMultiAgent" Icon="@(new Icons.Regular.Size20.BotSparkle())">Multi-Agent</FluentNavLink>
        </FluentNavMenu>
        <FluentBodyContent class="body-content">
            <main class="content">
                @Body
            </main>
        </FluentBodyContent>
    </FluentStack>
    <!-- Footer -->
    <FluentFooter Class="footer">
        <FooterComponent />
        <FluentSpacer />
        <FluentUIRequiredFeatures />
    </FluentFooter>
</FluentLayout>

@code {
    private void NavigateToChat()
    {
        Navigation.NavigateTo("chat");
    }

    private void NavigateToMultiAgent()
    {
        Navigation.NavigateTo("multiagent");
    }
}